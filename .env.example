# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# API Configuration
API_KEY=your_translation_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/translation_db

# Security Configuration
LOG_ENCRYPT_KEY=your_log_encryption_key_here

# Application Environment
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/translation_api.log

# Translation Service Configuration
MAX_TEXT_LENGTH=5000
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,zh,ar,ru

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
